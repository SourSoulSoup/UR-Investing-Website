<!DOCTYPE html>
<html>
<head>
    @{
        string siteName = "UR Investing";
    }
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @siteName</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/Files/favicon.ico" />
    @Styles.Render("~/Content/css")
@*
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/dropdown-submenu.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/site.css" />
*@
    @Scripts.Render("~/bundles/modernizr")
</head>

<body class="background-light">
    <nav class="container-fluid navbar navbar-fixed-top background-medium">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button> <!-- Drop down menu 3 bar icon -->
                
                <!-- UR Investing Logo and navigation link -->
                <div class="navbar-brand">
                    <a href="@Url.Action("Index", "Home")"><img alt="@siteName" src="~/Content/Files/Brand.jpg" class="navbar-brand-image" /></a>
                </div>
            </div>

            <!-- Top Navigation Bar-->
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav nav-pills nav-stacked">

                    <!-- Home navigation link-->
                    <li class=@(ViewBag.currentPage == "Home" ? "active" : "")>@Html.ActionLink("Home", "Index", "Home")</li>

                    <!-- About navigation link-->
                    <li class=@(ViewBag.currentPage == "About" ? "active" : "")>@Html.ActionLink("About", "Index", "About")</li>

                    <!-- Member navigation link and dropdowns-->
                    @*TODO: Make the member dropdown list dynamic*@
                    <li class="dropdown dropdown-main @(ViewBag.currentPage == "Members" ? "active" : "")">
                        <a href="@Url.Action("Index","Members")">
                            Members <span class="caret hidden-xs"></span>
                        </a>
                        <div class="hidden-xs">
                            @{
                                Html.RenderAction("MemberList", "Layout");
                            }
                        </div>
                    </li>

                    <!-- Contact navigation link-->
                    <li class=@(ViewBag.currentPage == "Contact" ? "active" : "")>@Html.ActionLink("Contact", "Index", "Contact")</li>

                    <li class="visible-xs"><a>xs</a></li>
                    <li class="visible-sm"><a>sm</a></li>
                    <li class="visible-md"><a>md</a></li>
                    <li class="visible-lg"><a>lg</a></li>
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container-fluid ">
        <div class="col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2 body-content background-white round-top">
            @RenderBody()
        </div>
    </div>
    
    <div class="container-fluid">
        <div class="navbar background-dark round-bottom col-md-8 col-md-offset-2">
            <ul class="navbar-nav nav nav-pills nav-stacked">
                <li>
                    <a href="https://www.facebook.com/urInvesting" target="_blank"><img src="~/Content/Files/Facebook Logo.png" style="max-height:20px;" /></a>
                </li>
                <li>
                    <a href="https://twitter.com/UR_Investing" target="_blank"><img src="~/Content/Files/Twitter Logo.png" style="max-height:20px;" /></a>
                </li>
            </ul>
            <ul>
                <li class="nav nabar-nav navbar-right">
                    <p class="navbar-text color-light">&copy; @DateTime.Now.Year - @siteName</p>
                </li>
            </ul>
        </div>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/dropzone")
    @RenderSection("scripts", required: false)

</body>
</html>
