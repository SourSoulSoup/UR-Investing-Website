@model IEnumerable<UR_Investing.Models.Member>

<!-- Member navigation link and dropdowns-->

<ul class="dropdown-menu dropdown-first multi-level" role="menu" aria-labelledby="dropdownMenu">
@{
    bool first = true;
    foreach (var team in ViewBag.Teams)
    {
        if (!first) { <li class="divider"></li> }
        else  { first = false; }
        <li class="dropdown-submenu">
            <a tabindex="-1" href="#">@team.name</a>
            <ul class="dropdown-menu">
            @{
                first = true;
                foreach (var member in Model)
                {
                    if (member.teamName == team.name)
                    {
                        if (!first) { <li class="divider"></li> }
                        else { first = false; }
                        <li><a tabindex="-1" href="#">@member.name - @member.teamName, @member.positionName</a></li>
                        <li>@Html.ActionLink("Details", "Details", "Members", new { id = member.ID }, new { @class="tabindex=-1"})</li>
                    }
                }
            }
            </ul>
    </li>
    }

}
</ul>
